<?xml version="1.0" encoding="utf-8"?>
 <manifest xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     package="com.anmol.wedza"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://schemas.android.com/tools ">

     <uses-permission android:name="android.permission.CALL_PHONE" />
     <uses-permission android:name="android.permission.CALL_PHONE" />
     <uses-permission android:name="android.permission.INTERNET" />
     <uses-permission android:name="android.permission.CAMERA" />
     <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     <uses-permission android:name="android.permission.CALL_PHONE" />
     <uses-permission android:name="android.permission.READ_PHONE_STATE" />

     <uses-feature android:name="android.hardware.camera" />

     <uses-permission android:name="android.permission.RECORD_AUDIO" />

     <application
         android:name=".FireApp"
         android:allowBackup="true"
         android:icon="@drawable/wedrings"
         android:label="@string/app_name"
         android:roundIcon="@drawable/wedrings"
         android:supportsRtl="true"
         android:theme="@style/AppTheme">
         <activity
             android:name=".MainActivity"
             android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
         <activity android:name=".LoginActivity" />

         <meta-data
             android:name="com.facebook.sdk.ApplicationId"
             android:value="@string/facebook_app_id" />

         <activity
             android:name=".HomeActivity"
             android:label="@string/app_name"
             android:theme="@style/AppTheme.NoActionBar">
             <intent-filter>
                 <action android:name="android.intent.action.MAIN" />

                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
         </activity>
         <activity android:name=".SignupActivity" />
         <activity android:name=".IntroduceYourselfActivity" />
         <activity android:name=".CameraActivity" />
         <activity
             android:name=".StoryMediaPreview"
             android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
         <activity android:name=".WishesActivity" />
         <activity
             android:name=".CommentsActivity"
             android:configChanges="orientation|keyboard|keyboardHidden" />
         <activity android:name=".KeypeopleActivity" />
         <activity android:name=".EventsActivity" />
         <activity android:name=".AlertsActivity" />
         <activity android:name=".AlbumActivity" />
         <activity android:name=".PhoneVerification" />
         <activity android:name=".EditpersonalinfoActivity" />

         <provider
             android:name="android.support.v4.content.FileProvider"
             android:authorities="com.anmol.wedza"
             android:exported="false"
             android:grantUriPermissions="true">
             <meta-data
                 android:name="android.support.FILE_PROVIDER_PATHS"
                 android:resource="@xml/filepaths" />
         </provider>

         <activity android:name=".CreateeventActivity" />
         <activity android:name=".StoryeditActivity" />
         <activity android:name=".ViewgroupsActivity" />
         <activity android:name=".CreateweddingActivity" />
         <activity android:name=".SwitchweddingActivity" />
         <activity android:name=".EditcoverpicActivity" />
         <activity android:name=".Editpersonalinfo" />
         <activity android:name=".Weddingsettings" />
         <activity android:name=".ContactdeveloperActivity"></activity>
     </application>

 </manifest>