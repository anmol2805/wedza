<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:id="@+id/menutop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ail"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/allpics"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/galleryblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/allpics"
                    android:layout_toEndOf="@+id/allpics"
                    android:layout_centerVertical="true"
                    android:text="All Images"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/albuml"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/albums"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/imageblue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/albums"
                    android:layout_toRightOf="@+id/albums"
                    android:layout_centerVertical="true"
                    android:text="Albums"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    />
            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridview"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:stretchMode="spacingWidthUniform"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/backgradient"


        />


</LinearLayout>