<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anmol.wedza.StoryeditActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/heart"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload any Image!!!"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="8dp"
            >
            <ImageButton
                android:id="@+id/browse"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:srcCompat="@android:drawable/ic_menu_upload_you_tube"
                android:background="@drawable/uploadimg"
                />

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_play_icon" />
        </RelativeLayout>


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="upload"
            android:textColor="#FCE4B6"
            android:elevation="8dp"
            android:background="@drawable/round_button3"
            android:layout_gravity="center"
            />

        <ProgressBar
            android:id="@+id/prgbrimg"
            style="?android:attr/progressBarStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/storytext"
            android:layout_margin="5dp"
            android:hint="Story about the couple..."
            android:textAlignment="center"
            android:layout_weight="1"
            android:elevation="8dp"
            android:textColorHint="#000"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/savestory"
            android:text="Save Story"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="#FCE4B6"
            android:elevation="8dp"
            android:background="@drawable/round_button3"
            />

        <ProgressBar
            android:id="@+id/prgbrstory"
            style="?android:attr/progressBarStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>


</RelativeLayout>
