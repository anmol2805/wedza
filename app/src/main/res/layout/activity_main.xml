<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anmol.wedza.MainActivity"
    android:background="#fff"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:src="@drawable/heart"
        android:alpha="0.2"
        android:scaleType="center"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="155dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:scaleType="center"
        android:src="@drawable/moment1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/clip"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/wed"
        android:elevation="4dp"
        android:id="@+id/imageView2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/art"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/bridegroom" />

    <ImageView
        android:id="@+id/hands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:src="@drawable/index" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Getting married soon?"
        android:textStyle="bold"
        android:textColor="#E92004"
        />

    <Button
        android:id="@+id/geturapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Get your app"
        android:textColor="#FCE4B6"
        android:background="@drawable/round_button3"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/joinwed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Join Wedding"
        android:textColor="#FCE4B6"
        android:textStyle="bold"
        android:background="@drawable/round_button3"
        android:elevation="8dp"
        android:layout_below="@id/imageView2"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wedid"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button4"
        android:hint="Enter Wedding ID"
        android:textAlignment="center"

        android:textColor="#E92004"
        android:textColorHint="#FF8806"
        android:layout_above="@+id/hands"
        android:elevation="4dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:text="Exisiting user?"
        android:textColor="#fff"
        android:layout_below="@+id/wedid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/wedid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#fff"
        android:text="login"
        android:textColor="#000"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>
